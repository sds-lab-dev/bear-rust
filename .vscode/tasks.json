{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "cargo",
            "args": [
                "clippy",
                "--",
                "-D",
                "warnings",
                "--no-deps"
            ],
            "group": "build",
            "label": "Check",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            }
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--",
                "--no-capture"
            ],
            "group": "build",
            "label": "Test",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            }
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": [
                "build"
            ],
            "group": "build",
            "label": "Build",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            },
            "dependsOn": [
                "Check",
                "Test"
            ],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "command": "cargo",
            "args": [
                "run"
            ],
            "group": "build",
            "label": "Run",
            "presentation": {
                "panel": "shared",
                "clear": false,
                "close": false
            },
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "--login",
                        "-c"
                    ]
                }
            },
            "dependsOn": "Build",
            "dependsOrder": "sequence",
            "runOptions": {
                "instanceLimit": 100
            }
        }
    ]
}